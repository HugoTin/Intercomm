@model List<Conjuntos>
@{ 
    Layout = "/Views/Shared/Layout.cshtml";
    ViewBag.Title = "Veiculos"; 
    string search = ViewBag.Search;
}

<div class="container d-flex justify-content-center mb-3 mt-3">

    <!-- PESQUISAR -->
    <form action="/conjuntos/search" method="post" class="input-group mt-0">
        <div class="input-group w-75">
            <input class="form-control" type="text" name="search" value="">
            <button class="btn btn-outline-secondary">Pesquisar</button>
        </div>
    </form>

    <a href="/conjuntos/create"><button class="btn btn-primary">Adicionar</button></a>
    
</div>
<div class="container table-responsive d-flex justify-content-center">
    <table class="table table-success table-striped">
        <tr>
            <th scope="col">ID Veiculo</th>
            <th scope="col">Nome Motorista</th>
            <th scope="col">Tipo Veiculo</th>
            <th scope="col">Placa A</th>
            <th scope="col">Placa B</th>
            <th scope="col">Placa C</th>
            <th scope="col">&ensp;</th>
        </tr>
        @foreach (var conjunto in Model)
        {
            <tr>
                <td>@conjunto.IdConjunto</td>
                <td>@conjunto.Motorista.NomeMotorista</td>
                <td>@conjunto.TipoConjunto</td>
                <td id="Placa" class="Placa">@conjunto.PlacaA</td>
                <td id="Placa" class="Placa">@conjunto.PlacaB</td>
                <td id="Placa" class="Placa">@conjunto.PlacaC</td>
                <td>
                    <form action="/conjuntos/update" method="GET">
                        <input type="hidden" name="IdConjunto" value="@conjunto.IdConjunto">
                        <button class="btn btn-primary btn-sm">Editar</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>